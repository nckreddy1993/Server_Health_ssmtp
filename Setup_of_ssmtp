#!/bin/bash

# ====== Health Check Variables ======
HOSTNAME=$(hostname)
DATE=$(date +"%Y-%m-%d %H:%M:%S")
REPORT="/tmp/health_report.txt"
EMAIL="chandrakanth3103@gmail.com"
SUBJECT="[$HOSTNAME] Health Report - $DATE"

# ====== Start Report ======
echo "ğŸ“Š Health Report for $HOSTNAME - $DATE" > "$REPORT"
echo "=======================================" >> "$REPORT"

# ----- Uptime -----
echo -e "\nğŸ•’ Uptime:" >> "$REPORT"
uptime >> "$REPORT"

# ----- CPU Usage -----
echo -e "\nğŸ”¥ CPU Load:" >> "$REPORT"
top -bn1 | grep "Cpu(s)" >> "$REPORT"

# ----- Memory -----
echo -e "\nğŸ’¾ Memory Usage:" >> "$REPORT"
free -h >> "$REPORT"

# ----- Disk -----
echo -e "\nğŸ—„ Disk Usage:" >> "$REPORT"
df -h --total >> "$REPORT"

# ----- Running Services -----
echo -e "\nğŸ”§ Active Services:" >> "$REPORT"
for svc in sshd crond docker nginx; do
  systemctl is-active --quiet "$svc" && echo "$svc is âœ… running" || echo "$svc is âŒ not running"
done >> "$REPORT"

# ----- Top Processes -----
